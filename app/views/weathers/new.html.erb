<%= form_for @weather, :url => weathers_path do |f| %>

<div class="form-group">
 <%= f.label :name, "災情地點" %>
 <%= f.text_field :name, :class => "form-control" %>
</div>

<div class="form-group">
 <%= f.label :description, "災情狀況" %>
 <%= f.text_field :description, :class => "form-control" %>
</div>

<div class="form-group">
 <%= f.label :product, "請求物資" %>
 <%= f.text_field :description, :class => "form-control" %>
</div>

<div class="form-group">
 <%= f.label :help, "求救是否" %>
 <%= f.text_field :description, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.submit "送出", :class => "btn btn-primary"  %>
</div>

<% end %>